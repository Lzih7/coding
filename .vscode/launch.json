{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C Debug (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/a.out", // 默认编译输出文件名
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // Linux/macOS
      // Windows 示例："miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe"
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build C file", // 对应 tasks.json 中的 task 名称
      //"miDebuggerConsole": "integrated"
    }
  ]
}